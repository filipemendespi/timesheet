<!DOCTYPE html>
<html>
<head>
  <title>Timesheet</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if alert.present? %>
  <div class='alert alert-danger' role='alert'>
    <%= alert %>
  </div>
<% end %>

<% if notice.present? %>
  <div class='alert alert-success' role='notice'>
  <%= notice %>
  </div>
<% end %>

<%= yield %>

</body>
</html>
